// Rules seem correct, no changes needed to content.
// But I will add a comment to ensure file is detected if needed.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ... existing rules ...


    function isSuperUser() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/adminConfig/superusers) &&
             get(/databases/$(database)/documents/adminConfig/superusers).data.emails != null &&
             request.auth.token.email in get(/databases/$(database)/documents/adminConfig/superusers).data.emails;
    }

    function isAdmin() {
      return request.auth != null && (
        // Explicit admin by UID
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
        // Or is superuser
        || isSuperUser()
        // Or listed in permitted admin emails
        || (exists(/databases/$(database)/documents/adminConfig/access) && 
            get(/databases/$(database)/documents/adminConfig/access).data.adminEmails != null &&
            request.auth.token.email in get(/databases/$(database)/documents/adminConfig/access).data.adminEmails)
      );
    }

    match /leads/{leadId} {
      // Allow public create (form submissions) without strict validation for now to unblock
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Admin config: allow authenticated users to read the superusers doc
    // so the client can determine whether the signed-in user is a superuser.
    match /adminConfig/superusers {
      allow read: if request.auth != null;
      // Allow write if you are already a superuser OR if you are initializing the doc (self-seeding)
      allow write: if request.auth != null && (
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) ||
        isSuperUser() ||
        (request.resource.data.emails != null && request.auth.token.email in request.resource.data.emails)
      );
    }

    // Admin Access List: Allow superusers to manage the email allowlist
    match /adminConfig/access {
      allow read: if request.auth != null;
      allow write: if isSuperUser();
    }

    // Admins collection: allow admin to read their own doc and allow superusers to create/modify admins
    match /admins/{adminId} {
      allow read: if request.auth != null && (request.auth.uid == adminId || isAdmin());
      allow write: if request.auth != null && (
        request.auth.uid == adminId ||
        isSuperUser()
      );
    }

    // Other public documents can be opened as needed
  }
}
