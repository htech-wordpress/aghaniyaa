{
    "rules": {
        ".read": "auth != null",
        ".write": "auth != null",
        "branches": {
            ".read": true,
            ".indexOn": [
                "status"
            ]
        },
        "agents": {
            ".indexOn": [
                "email"
            ]
        },
        "leads": {
            ".read": "auth != null",
            "$leadId": {
                ".write": "auth != null || (data.val() == null && newData.val() != null)",
                ".validate": "newData.hasChildren(['category', 'data', 'timestamp'])"
            },
            ".indexOn": [
                "timestamp",
                "category"
            ]
        },
        "adminUsers": {
            ".indexOn": [
                "email"
            ]
        },
        "settings": {
            ".read": true
        },
        "companyStats": {
            ".read": true
        }
    }
}